{% extends 'HostkitClientBundle:Default:index.html.twig' %}
{% form_theme form 'HostkitClientBundle:Default:fields.html.twig' %}

{% block clientcontent %}
    <section class="col-md-8" id="colorNav">
        <div class="content-box">
            <h3>Your Informations</h3>
			{% if message != '' %}
                            <div class="alert alert-info">{{ message }}</div>
                        {% endif %}
            <form action="" method="post" class="form-horizontal row-fluid" {{ form_enctype(form) }}>
			{{ form_rest(form) }}
                            <hr class="margin-top-bottom" />
                            <div class="form-group">
                                <div class="col-lg-offset-1 col-lg-9">
                                        <button class="btn btn-success" type="submit">Update</button>
                                </div>
                            </div>
                        </form>

        </div>
        <br /><br />
        <div class="divider-line-narrow"></div>
       </section>
{% endblock %}