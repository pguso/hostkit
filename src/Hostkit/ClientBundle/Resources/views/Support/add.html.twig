{% extends 'HostkitClientBundle:Default:index.html.twig' %}
{% form_theme form 'HostkitAdminBundle:Default:fields-large.html.twig' %}

{% block clientcontent %}
    <section class="col-md-8">
	<div class="content-box">
        <h3>Open Support Ticket</h3>
						{% if message != '' %}
							<div class="alert alert-success">{{ message }}</div>
						{% endif %}
                        <form action="" method="post" class="form-horizontal row-fluid" {{ form_enctype(form) }}>
                            {{ form_rest(form) }}
                            <hr class="margin-top-bottom" />
                            <div class="form-group">
                                <div class="col-lg-offset-1 col-lg-9">
                                        <button class="button" type="submit">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
				
				</section>
	
	
{% endblock %}