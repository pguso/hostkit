{% extends 'HostkitClientBundle:Default:index.html.twig' %}

{% block clientcontent %}
    <section class="col-md-8">
        <div class="content-box">
            <h3>Domain Overview</h3>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Registrated Date</th>
                    <th>Status</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% if activeItems is iterable %}
                    {% for activeItem in activeItems %}
                        <tr>
                            <td>{{ activeItem.id }}</td>
                            <td><a href="http://{{ activeItem.details }}" target="_blank">{{ activeItem.details }}</a>
                            </td>
                            <td>{{ activeItem.createdAt }}</td>
                            {% if activeItem.status == 3 %}
                                <td>Activ</td>
                            {% else %}
                                <td>Inactive</td>
                            {% endif %}
                            {% if (activeItem.status == 3) and (settings.autoJobsDomains == 1) %}
                            <td><a href="{{ path('hostkit_client_domains_config', { domainId: activeItem.id }) }}"><span
                                            class="label label-success">Config</span></a></td>
                            {% else %}
                                <td></td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>

    </section>
{% endblock %}