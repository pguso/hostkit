{% extends 'HostkitShopBundle:Cart:step_1_domain.html.twig' %}



                    {% block stepcontent %}
                        <div id="one" class="padding-top">
                            <div class="box-order">
                                <h4> Review your Order Â»</h4>
                                <section class="box-order-content">
                                    <div id="msg" style="display: none"></div>

									<h5> Your Personal Informations </h5>
									<hr/><br />
									<table class="table table-striped table-review">
									
										<tbody>
										<tr>
											<td>Firstname:</td><td>{{ client.firstname }}</td>
										</tr>
										<tr>
											<td>Lastname:</td><td>{{ client.lastname }}</td>
										</tr>
										<tr>
											<td>Phone:</td><td>{{ client.phone }}</td>
										</tr>
										<tr>
											<td>E-Mail Address:</td><td>{{ client.email }}</td>
										</tr>
										<tr>
											<td>Address:</td><td>{{ client.address1 }}</td>
										</tr>
										<tr>
											<td>Areacode:</td><td>{{ client.postcode }}</td>
										</tr>
										<tr>
											<td>City:</td><td>{{ client.city }}</td>
										</tr>
										<tr>
											<td>Country:</td><td>{{ client.country }}</td>
										</tr>
										</tbody>
										
									</table>
									<br /><br />
									
									<h5> Your Cart </h5>
									<hr />
									<table class="table table-striped table-pricing">
										<thead>
										<tr>
										<th>Product</th><th>Detail</th><th>Term</th><th>Price per Term</th>
										</tr>
										</thead>
										<tbody>
                                        {% if cart.tld != '' and cart.domainMode != 'owndomain' %}
										<tr>
											<td>.{{ cart.tld }} Domain</td><td>{{ cart.domain }}.{{ cart.tld }}</td><td>{{ domainPricing.period }} Year</td><td>${{ domainPricing.price }}</td>
										</tr>
                                        {% endif %}
										<tr>
											<td>Hosting Package incl. Setup</td><td>{{ product.name }}</td><td>{{ cart.billingCycle }} {% if cart.billingCycle == 1 %} Month {% else %} Months{% endif %}</td><td>${{ product.price }}</td>
										</tr>
										</tbody>
										
									</table>
									
									<div class="pricingBox">
									<p id="subTotal"></p>
									<p id="tax"></p>
									<p id="total"></p>
									</div>
									<div style="clear: both"></div>
									
									<hr class="margin-top-bottom" />
									<div class="form-group">
										<div class="col-lg-9">
											<a href="{{ path('hostkit_paypal') }}"><button class="btn btn-success round order-submit" type="submit">Purchase via Paypal</button></a>
										</div>
									</div>
									
									<div style="clear: both"></div>

                                </section>
                            </div>
                        </div>
                    {% endblock %}