{% extends 'HostkitAdminBundle:Default:index.html.twig' %}

{% block title %}Admin Interface - Dashboard{% endblock %}

{% block content %}

    <!-- Income -->
    <div class="col-md-6">
        <div class="widget">
            <!-- Widget title -->
            <div class="widget-head">
                <div class="pull-left">Income</div>
                <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
                    <a href="#" class="wclose"><i class="icon-remove"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="widget-content">
                <div id="income" style="width: 100%; margin: 20px auto"></div>

                <div class="widget-foot">
                </div>
            </div>
        </div>
    </div>
    <script>
        var income = [[{{ totalSales }}], [{{ todaySales }}], [{{ unpaidInvoicesAmount }}], [{{ thisMonthSales }}]]
    </script>

    <!-- Product Stats -->
    <div class="col-md-6">
        <div class="widget">
            <!-- Widget title -->
            <div class="widget-head">
                <div class="pull-left">Sales</div>
                <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
                    <a href="#" class="wclose"><i class="icon-remove"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="widget-content">
                <div id="sales" style="width: 87%; margin: 20px auto"></div>

                <div class="widget-foot">
                </div>
            </div>
        </div>
    </div>
    <script>
        var line = [
        {% for lastMonth in lastMonths %}
        ['{{ lastMonth.name }}',{{ lastMonth.count }}],
        {% endfor %}
        ];
    </script>

    <!-- Income -->
    <div class="col-md-6">
        <div class="widget">
            <!-- Widget title -->
            <div class="widget-head">
                <div class="pull-left">Support Tickets</div>
                <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
                    <a href="#" class="wclose"><i class="icon-remove"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="widget-content">
                <!-- Widget content -->

                <div id="support"></div>

                <div class="widget-foot">
                </div>
            </div>
        </div>
    </div>
    <script>
        var s1 = [['Open Tickets',{{ openSupportTickets }}], ['Unaswered Tickets',{{ answeredSupportTickets }}], ['Closed Tickets',{{ closedSupportTickets }}]];
    </script>

    <div class="col-md-6">
        <div class="widget">
            <!-- Widget title -->
            <div class="widget-head">
                <div class="pull-left">Clients</div>
                <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
                    <a href="#" class="wclose"><i class="icon-remove"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="widget-content">
                <!-- Widget content -->

                <div id="client"></div>

                <div class="widget-foot">
                </div>
            </div>
        </div>
    </div>
    <script>
        var s2 = [['Active Clients',{{ activeClients }}], ['Inactive Clients',{{ inactiveClients }}]];
    </script>

{% endblock %}