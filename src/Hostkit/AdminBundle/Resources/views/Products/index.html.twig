{% extends 'HostkitAdminBundle:Default:index.html.twig' %}

{% block title %}Admin Interface - Products{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="widget">

                <div class="widget-head">
                    <div class="pull-left">cPanel Products - Hosting Packages</div>
                    <div class="widget-icons pull-right">
                        <a class="wminimize" href="#"><i class="icon-chevron-up"></i></a>
                        <a class="wclose" href="#"><i class="icon-remove"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="widget-content">

                    <table class="table table-striped table-bordered table-hover table-sort">
                        <thead>
                        <tr>
                            <th>Packagename</th>
                            <th>Payment</th>
                            <th>Type</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if hostingPackages is empty %}
                            <tr>
                                <td colspan="7">No Packages available</td>
                            </tr>
                        {% else %}
                            {% for hostingPackage in hostingPackages %}
                                <tr data-hide="{{ hostingPackage.id }}">
                                    <td>{{ hostingPackage.name }}</td>
                                    <td>{{ hostingPackage.catId }}</td>
                                    <td>{{ hostingPackage.typeId }}</td>
                                    <td>
                                        <a href="{{ path('hostkit_xs_server_modify', {'serverId': hostingPackage.id }) }}">
                                            <button class="btn btn-xs btn-warning"><i class="icon-pencil"></i></button>
                                        </a>
                                        <button class="btn btn-xs btn-danger delete" data-serverid="{{ hostingPackage.id }}" data-target="{{ path('hostkit_xs_server_delete', {'serverId': hostingPackage.id }) }}"><i class="icon-remove"></i></button>

                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>

                    <div class="widget-foot">
                        <a href="{{ path('hostkit_xs_server_add') }}">
                            <button class="btn btn-success"><span class="icon-white icon-plus"></span> Add Server
                            </button>
                        </a>

                        <div class="clearfix"></div>

                    </div>

                </div>

            </div>
        </div>
    </div>

{% endblock %}