{% extends 'HostkitAdminBundle:Default:index.html.twig' %}
{% form_theme form 'HostkitAdminBundle:Default:fields.html.twig' %}
{% form_theme form_payment 'HostkitAdminBundle:Default:fields.html.twig' %}
{% form_theme form_user 'HostkitAdminBundle:Default:fields.html.twig' %}

{% block title %}Admin Interface - Settings{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="widget">

                <div class="widget-head">
                    <div class="pull-left">Settings</div>
                    <div class="widget-icons pull-right">
                        <a class="wminimize" href="#"><i class="icon-chevron-up"></i></a>
                        <a class="wclose" href="#"><i class="icon-remove"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="widget-content">

				<ul class="nav nav-tabs" id="settingsTab">
				  <li class="active"><a href="#home" data-toggle="tab">General</a></li>
				  <li><a href="#profile" data-toggle="tab">Payment</a></li>
				  <li><a href="#user" data-toggle="tab">User</a></li>
				  <!--<li><a href="#settings" data-toggle="tab">Settings</a></li>-->
				</ul>

				<div class="tab-content">
				  <div class="tab-pane active" id="home">
                        <form action="" method="post" class="form-horizontal row-fluid" {{ form_enctype(form) }}>
						{{ form_rest(form) }}
                            <hr class="margin-top-bottom" />
                            <div class="form-group">
                                <div class="col-lg-offset-1 col-lg-9">

                                        <button class="btn btn-success" type="submit">Update Settings</button>
                                    
                                </div>
                            </div>
                        </form>
				</div>
				  <div class="tab-pane" id="profile">
                        <form action="" method="post" class="form-horizontal row-fluid" {{ form_enctype(form_payment) }}>
						{{ form_rest(form_payment) }}
                            <hr class="margin-top-bottom" />
                            <div class="form-group">
                                <div class="col-lg-offset-1 col-lg-9">

                                        <button class="btn btn-success" type="submit">Update Payment</button>
                                    
                                </div>
                            </div>
                        </form>
				</div>
				  <div class="tab-pane" id="user">
                        <form action="" method="post" class="form-horizontal row-fluid" {{ form_enctype(form_user) }}>
						{{ form_rest(form_user) }}
                            <hr class="margin-top-bottom" />
                            <div class="form-group">
                                <div class="col-lg-offset-1 col-lg-9">

                                        <button class="btn btn-success" type="submit">Update User</button>
                                    
                                </div>
                            </div>
                        </form>
				</div>
				  <div class="tab-pane" id="settings">...</div>
				</div>
				
				<div class="widget-foot">
                        {#<a href="{{ path('hostkit_xs_cms_site_add') }}">
                            <button class="btn btn-success"><span class="icon-white icon-plus"></span> Create new Site
                            </button>
                        </a>#}

                        <div class="clearfix"></div>

                    </div>

                </div>

            </div>
        </div>
    </div>

{% endblock %}