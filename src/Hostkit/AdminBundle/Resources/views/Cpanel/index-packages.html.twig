{% extends 'HostkitAdminBundle:Default:index.html.twig' %}{% block title %}Admin Interface - Packages overview{% endblock %}{% block content %}    <div class="row">        <div class="col-md-12">            <div class="widget">                <div class="widget-head">                    <div class="pull-left">cPanel Packages                        {% if server != '' %}                            - Showing Packages from Server <span class="server">{{ server }}</span>                        {% endif %}                    </div>                    <div class="widget-icons pull-right">                        <a class="wminimize" href="#"><i class="icon-chevron-up"></i></a>                        <a class="wclose" href="#"><i class="icon-remove"></i></a>                    </div>                    <div class="clearfix"></div>                </div>                <div class="widget-content">                    {% if error is defined %}                        <div class="errormsg">{{ error }}</div>                    {% endif %}					<div class="table-responsive">                    <table class="table table-striped table-bordered table-hover table-sort">                        <thead>                        <tr>                            <th>Name</th>                            <th>BW Limit</th>                            <th>CGI</th>                            <th>Theme</th>                            <th>Featurelist</th>                            <th>Shell</th>                            <th>Language</th>                            <th>FTP</th>                            <th>Mail</th>                            <th>MySQL</th>                            <th>Subdomains</th>                            <th>Quota</th>                            <th></th>                        </tr>                        </thead>                        <tbody>                        {% if packages is iterable %}                            {% for package in packages %}                                <tr data-hide="{{ package.name }}">                                    <td>{{ package.name }}</td>                                    {% if package.BWLIMIT == 'unlimited' %}                                        <td>{{ package.BWLIMIT }}</td>                                    {% else %}                                        <td>{{ package.BWLIMIT }} MB</td>                                    {% endif %}                                    {% if package.CGI == 'y' %}                                        <td><span class="icon icon-check-sign"></span></td>                                    {% else %}                                        <td><span class="icon icon-minus-sign"></span></td>                                    {% endif %}                                    <td>{{ package.CPMOD }}</td>                                    <td>{{ package.FEATURELIST }}</td>                                    {% if package.HASSHELL == 'y' %}                                        <td><span class="icon icon-check-sign"></span></td>                                    {% else %}                                        <td><span class="icon icon-minus-sign"></span></td>                                    {% endif %}                                    <td>{{ package.LANG }}</td>                                    <td>{{ package.MAXFTP }}</td>                                    <td>{{ package.MAXPOP }}</td>                                    <td>{{ package.MAXSQL }}</td>                                    <td>{{ package.MAXSUB }}</td>                                    {% if package.QUOTA == 'unlimited' %}                                        <td>{{ package.QUOTA }}</td>                                    {% else %}                                        <td>{{ package.QUOTA }} MB</td>                                    {% endif %}                                    <td>                                        <a href="{{ path('hostkit_xs_cpanel_packages_modify', {'packageId': package.name }) }}">                                            <button class="btn btn-xs btn-warning"><i class="icon-pencil"></i></button>                                        </a>                                        <button class="btn btn-xs btn-danger delete" data-serverid="{{ package.name }}" data-target="{{ path('hostkit_xs_cpanel_packages_delete', {'packageId': package.name }) }}"><i class="icon-remove"></i></button>                                    </td>                                </tr>                            {% endfor %}                        {% elseif connectionError != '' %}                            <tr>                                <td colspan="13">Could not connect to Server.</td>                            </tr>                        {% else %}                            <tr>                                <td colspan="13">No Data available.</td>                            </tr>                        {% endif %}                        </tbody>                    </table>					</div>                    <div class="widget-foot">                        <a href="{{ path('hostkit_xs_cpanel_packages_add') }}">                            <button class="btn btn-success"><span class="icon-white icon-plus"></span> Add Package                            </button>                        </a>                        <div class="clearfix"></div>                    </div>                </div>            </div>        </div>    </div>{% endblock %}