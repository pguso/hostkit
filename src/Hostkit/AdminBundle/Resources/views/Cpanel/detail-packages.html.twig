{% extends 'HostkitAdminBundle:Default:index.html.twig' %}

{% block title %}Admin Interface - cPanel Package Detail{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="widget">

                <div class="widget-head">
                    <div class="pull-left">cPanel Packages</div>
                    <div class="widget-icons pull-right">
                        <a class="wminimize" href="#"><i class="icon-chevron-up"></i></a>
                        <a class="wclose" href="#"><i class="icon-remove"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="widget-content">

                    <div class="padd">
                        {% if packageInfos is iterable %}
                            {% for packageInfo in packageInfos %}
                                <table class="table table-striped table-bordered table-hover table-sort">
                                    <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    </tbody>
                                </table>
                            {% endfor %}
                        {% else %}
                            {{ packageInfos }}
                        {% endif %}
                    </div>

                    <div class="widget-foot">
                        <a href="{{ path('hostkit_xs_cpanel_packages_overview') }}">
                            <button class="btn btn-info">Back to Package overview</button>
                        </a>

                        <div class="clearfix"></div>

                    </div>

                </div>

            </div>
        </div>
    </div>

{% endblock %}