{% extends 'HostkitAdminBundle:Default:index.html.twig' %}

{% block title %}Admin Interface - Support{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="widget">

                <div class="widget-head">
                    <div class="pull-left">FAQ</div>
                    <div class="widget-icons pull-right">
                        <a href="{{ path('hostkit_xs_admin_support_faq_category_add') }}">
                            <span class="label label-success">Add Category</span>
                        </a>
                        <a class="wminimize" href="#"><i class="icon-chevron-up"></i></a>
                        <a class="wclose" href="#"><i class="icon-remove"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="widget-content">
                    <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover table-sort-desc">
                        <thead>
                        <tr>
                            <th>Question</th>
                            <th>Category</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if faq is empty %}
                            <tr>
                                <td colspan="7">No Data available</td>
                            </tr>
                        {% else %}
                            {% for question in faq %}
                                <tr data-hide="{{ question.id }}">
                                    <td>{{ question.question }}</td>
                                    <td>{{ question.category }}</td>
                                    <td>

                                        <a href="{{ path('hostkit_xs_admin_support_faq_modify', {'faqId': question.id }) }}">
                                            <button class="btn btn-xs btn-warning"><i class="icon-pencil"></i></button>
                                        </a>

                                        <button class="btn btn-xs btn-danger delete" data-serverid="{{ question.id }}" data-target="{{ path('hostkit_xs_admin_support_faq_delete', {'faqId': question.id }) }}"><i class="icon-remove"></i></button>

                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
					</div>

                    <div class="widget-foot">

                        <a href="{{ path('hostkit_xs_admin_support_faq_add') }}">
                            <button class="btn btn-success"><span class="icon-white icon-plus"></span> Add  Question/Answer
                            </button>
                        </a>

                        <div class="clearfix"></div>

                    </div>

                </div>

            </div>
        </div>
    </div>

{% endblock %}